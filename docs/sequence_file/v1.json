{
    "$id": "sequence_file/v1.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "additionalProperties": false,
    "description": "A file containing a collection of sequences. This is most typically used for FASTA files from a reference genome assembly, but it can also be used for experimental FASTQ files.",
    "properties": {
        "$schema": {
            "description": "The schema to use.",
            "type": "string"
        },
        "is_child": {
            "default": false,
            "description": "Is this a child document, only to be interpreted in the context of the parent document from which it is linked? This may have implications for search and metadata requirements.",
            "type": "boolean"
        },
        "md5sum": {
            "description": "MD5 checksum for the file.",
            "type": "string"
        },
        "path": {
            "description": "Path to the file in the project directory.",
            "type": "string"
        },
        "sequence_file": {
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "format": {
                                "const": "FASTQ"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "quality_encoding": {
                                "default": "phred",
                                "description": "Encoding used for the base quality scores in a FASTQ file.",
                                "enum": [
                                    "phred",
                                    "solexa",
                                    "illumina"
                                ],
                                "type": "string"
                            }
                        }
                    }
                },
                {
                    "else": {
                        "properties": {
                            "compression": {
                                "enum": [
                                    "none",
                                    "bgzip"
                                ]
                            }
                        }
                    },
                    "if": {
                        "required": [
                            "index"
                        ]
                    }
                }
            ],
            "properties": {
                "compression": {
                    "description": "The compression format.",
                    "enum": [
                        "none",
                        "gzip",
                        "bzip2",
                        "bgzip"
                    ],
                    "type": "string"
                },
                "format": {
                    "description": "The file format.",
                    "enum": [
                        "FASTA",
                        "FASTQ"
                    ],
                    "type": "string"
                },
                "index": {
                    "description": "Index on the FASTA or FASTQ file, usually created with `samtools faidx`. If this is supplied, `compression` must either be none or bgzip.",
                    "properties": {
                        "resource": {
                            "_children": {
                                "contains": [
                                    "sequence_file_index"
                                ]
                            },
                            "properties": {
                                "path": {
                                    "description": "Relative path of the resource from the root of the project directory.",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Type of file. Local files should be present in the same project directory.",
                                    "enum": [
                                        "local"
                                    ],
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "path"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "resource"
                    ],
                    "type": "object"
                },
                "type": {
                    "default": "DNA",
                    "description": "Type of sequence in the file.",
                    "enum": [
                        "DNA",
                        "RNA",
                        "AA"
                    ],
                    "type": "string"
                }
            },
            "required": [
                "format"
            ],
            "type": "object"
        }
    },
    "required": [
        "$schema",
        "md5sum",
        "path",
        "sequence_file"
    ],
    "title": "Sequence File",
    "type": "object"
}
