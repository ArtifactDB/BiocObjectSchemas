{
    "$id": "bam_index_file/v1.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "_attributes": {
        "restore": {
            "R": "alabaster.files::loadBamIndexWrapper"
        }
    },
    "additionalProperties": false,
    "description": "An index file (BAI) for a coordinate-sorted BAM file containing sequence alignment data. This is typically produced by `samtools index`.",
    "properties": {
        "$schema": {
            "description": "The schema to use.",
            "type": "string"
        },
        "bam_index_file": {
            "properties": {
                "other_data": {
                    "description": "Location of additional metadata for this file, typically stored as a list (via the `simple_list` schema). Ommitted if no other metadata is provided.",
                    "properties": {
                        "resource": {
                            "_children": {
                                "contains": [
                                    "simple_list"
                                ]
                            },
                            "properties": {
                                "path": {
                                    "description": "Relative path of the resource from the root of the project directory.",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Type of file. Local files should be present in the same project directory.",
                                    "enum": [
                                        "local"
                                    ],
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "path"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "resource"
                    ],
                    "type": "object"
                }
            }
        },
        "is_child": {
            "default": false,
            "description": "Is this a child document, only to be interpreted in the context of the parent document from which it is linked? This may have implications for search and metadata requirements.",
            "type": "boolean"
        },
        "md5sum": {
            "description": "MD5 checksum for the file.",
            "type": "string"
        },
        "path": {
            "description": "Path to the file in the project directory.",
            "type": "string"
        }
    },
    "required": [
        "$schema",
        "bam_index_file",
        "md5sum",
        "path"
    ],
    "title": "BAM Index File",
    "type": "object"
}
