{
    "$id": "vcf_file/v1.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "_attributes": {
        "restore": {
            "R": "alabaster.vcf::loadVCFHeader"
        }
    },
    "additionalProperties": false,
    "description": "A Variant Call Format file containing variant calling information.",
    "properties": {
        "$schema": {
            "description": "The schema to use.",
            "type": "string"
        },
        "is_child": {
            "default": false,
            "description": "Is this a child document, only to be interpreted in the context of the parent document from which it is linked? This may have implications for search and metadata requirements.",
            "type": "boolean"
        },
        "md5sum": {
            "description": "MD5 checksum for the file.",
            "type": "string"
        },
        "path": {
            "description": "Path to the file in the project directory.",
            "type": "string"
        },
        "vcf_file": {
            "additionalProperties": false,
            "properties": {
                "compression": {
                    "default": "none",
                    "description": "The compression format.",
                    "enum": [
                        "none",
                        "gzip",
                        "bzip2",
                        "bgzip"
                    ],
                    "type": "string"
                },
                "header_only": {
                    "description": "Whether this file only contains the VCF headers, but no data. This is set to `true` when another object contains the VCF data, e.g., in a `vcf_experiment`.",
                    "type": "boolean"
                },
                "index": {
                    "description": "Tabix file to index the variants. If present, this assumes that the variants in this VCF file are sorted by their genomic position.",
                    "properties": {
                        "resource": {
                            "_children": {
                                "contains": [
                                    "tabix_file"
                                ]
                            },
                            "properties": {
                                "path": {
                                    "description": "Relative path of the resource from the root of the project directory.",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Type of file. Local files should be present in the same project directory.",
                                    "enum": [
                                        "local"
                                    ],
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "path"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "resource"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "header_only"
            ],
            "type": "object"
        }
    },
    "required": [
        "$schema",
        "md5sum",
        "path",
        "vcf_file"
    ],
    "title": "VCF File",
    "type": "object"
}
