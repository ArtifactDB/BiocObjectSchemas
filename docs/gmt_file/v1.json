{
    "$id": "gmt_file/v1.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "_attributes": {
        "restore": {
            "R": "alabaster.files::loadGmtWrapper"
        }
    },
    "additionalProperties": false,
    "description": "A file in the gene matrix transposed (GMT) format, containing feature set information. Each line corresponds to one feature set and is tab delimited. The first column contains the name of the set, the second column contains a description for the set, and the remaining columns contain the identifiers for the features in that set.",
    "properties": {
        "$schema": {
            "description": "The schema to use.",
            "type": "string"
        },
        "gmt_file": {
            "additionalProperties": false,
            "properties": {
                "compression": {
                    "description": "The compression format.",
                    "enum": [
                        "none",
                        "gzip",
                        "bzip2",
                        "bgzip"
                    ],
                    "type": "string"
                },
                "other_data": {
                    "description": "Location of additional metadata for this file, typically stored as a list (via the `simple_list` schema). Ommitted if no other metadata is provided.",
                    "properties": {
                        "resource": {
                            "_children": {
                                "contains": [
                                    "simple_list"
                                ]
                            },
                            "properties": {
                                "path": {
                                    "description": "Relative path of the resource from the root of the project directory.",
                                    "type": "string"
                                },
                                "type": {
                                    "description": "Type of file. Local files should be present in the same project directory.",
                                    "enum": [
                                        "local"
                                    ],
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "path"
                            ],
                            "type": "object"
                        }
                    },
                    "required": [
                        "resource"
                    ],
                    "type": "object"
                }
            },
            "required": [
                "compression"
            ],
            "type": "object"
        },
        "is_child": {
            "default": false,
            "description": "Is this a child document, only to be interpreted in the context of the parent document from which it is linked? This may have implications for search and metadata requirements.",
            "type": "boolean"
        },
        "md5sum": {
            "description": "MD5 checksum for the file.",
            "type": "string"
        },
        "path": {
            "description": "Path to the file in the project directory.",
            "type": "string"
        }
    },
    "required": [
        "$schema",
        "gmt_file",
        "md5sum",
        "path"
    ],
    "title": "GMT file",
    "type": "object"
}
