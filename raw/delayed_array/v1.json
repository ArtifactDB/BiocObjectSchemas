{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "delayed_array/v1.json",
    "type": "object",
    "title": "Delayed array",
    "description": "Delayed array saved in a group of a HDF5 file as an n-dimensional dataset. This follows the specification for delayed operations at https://ltla.github.io/chihaya.",
    "allOf": [
        { "$ref": "../array/v1.json" }
    ],
    "required": [
        "delayed_array"
    ],
    "properties": {
        "delayed_array": {
            "type":"object",
            "additionalProperties": false,
            "properties": {
                "group": {
                    "type": "string",
                    "description": "Name of the group containing the delayed array."
                }
            },
            "required": [
                "group"
            ]
        }
    },
    "_attributes": {
        "format": "application/x-hdf5",
        "restore": {
            "R": "artificer.matrix::loadArray"
        }
    }
}
