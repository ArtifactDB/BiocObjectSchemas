{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id":"bam_file_index/v1.json",
    "type": "object",
    "title": "BAM File Index",
    "description": "An index file (BAI) for a coordinate-sorted BAM file containing sequence alignment data.",
    "allOf": [
        { "$ref": "../_common/v1.json" },
        { "$ref": "../_md5sum/v1.json" }
    ],
    "additionalProperties": false,
    "required": [ "bam_file_index" ],
    "properties": {
        "bam_file_index": {
            "properties": {
                "other_data": {
                    "type": "object",
                    "description": "Location of additional metadata for this file, typically stored as a list (via the `simple_list` schema). Ommitted if no other metadata is provided.",
                    "properties": {
                        "resource": {
                            "_children":{
                                "contains": ["simple_list"]
                            }
                        }
                    },
                    "allOf": [ { "$ref": "../_resource/v1.json" } ]
                }
            }
        }
    }
}
